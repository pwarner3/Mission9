@{
}
@model BooksViewModel

<div class="bg-dark text-white p-2">
    <span class="navbar-brand ml-2">BOOKS LIST</span>
</div>
<div class="row m-1 p-1">
    <div id="categories" class="col-3">
        <vc:categories></vc:categories>
    </div>
    <div class="col-9">
        @foreach (var b in Model.Books)
        {

            <div class="card card-outline-primary m-1 p-1">
                <div class="bg-faded p-1">
                    <h4>
                        @b.Title
                        <span class="badge badge-pill badge-primary" style="float:right">
                            <small>$@b.Price</small>
                        </span>
                    </h4>
                </div>
                <div class="card-text p-1">Author: @b.Author</div>
                <div class="card-text p-1">Publisher: @b.Publisher</div>
                <div class="card-text p-1">Category: @b.Category</div>
                <div class="card-text p-1">Page Count: @b.PageCount</div>
                <div class="card-text p-1">Classification: @b.Classification</div>
                <div class="card-text p-1">ISBN: @b.Isbn</div>
            </div>

        }

        @* Generate pagination *@
        <div page-model="@Model.PageInfo" page-action="DisplayBooks" page-classes-enabled="true"
             page-class="btn" page-class-normal="btn-outline-dark"
             page-class-selected="btn-primary" class="btn-group pull-right m-1">
        </div>

    </div>
</div>


