@{
}
@model Purchase


<div class="row m-1 p-1">
    <div class="col-3">
        <h2>Checkout Now</h2>
    </div>
</div>


<div class="row m-1 p-1">
    <div id="categories" class="col-3 text-center">
        <vc:categories></vc:categories>
    </div>

    <div class="col-9">
        <form method="post" asp-action="Checkout">
            <div asp-validation-summary="All" class="text-danger"></div>

            <h4>Ship To</h4>
            <div class="mb-3">
                <label asp-for="Name">Name:</label>
                <input asp-for="Name" class="form-control" />
            </div>

            <h4>Address</h4>
            <div class="mb-3">
                <label asp-for="AddressLine1">Address Line 1:</label>
                <input asp-for="AddressLine1" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="AddressLine2">Address Line 2:</label>
                <input asp-for="AddressLine2" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="AddressLine3">Address Line 3:</label>
                <input asp-for="AddressLine3" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="City">City:</label>
                <input asp-for="City" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="State">State:</label>
                <input asp-for="State" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Zip">Zip:</label>
                <input asp-for="Zip" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Country">Country:</label>
                <input asp-for="Country" class="form-control" />
            </div>

            <div class="float-end">
                <input class="btn btn-success" type="submit" value="Make Purchase" />
            </div>


        </form>
    </div>
</div>
